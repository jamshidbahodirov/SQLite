<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background_image"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:id="@+id/ly_courses"
        android:layout_width="120dp"
        android:layout_height="60sp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@color/purple_700"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ly_groups">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/kurslar"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_vertical"
            android:gravity="center"
            android:text="Kurslar"
            android:textColor="#FF9800" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_groups"
        android:layout_width="120dp"
        android:layout_height="60sp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@color/purple_700"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/ly_courses"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ly_mentors">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/gruhlar" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_vertical"
            android:gravity="center"
            android:text="Gruhlar"
            android:textColor="#FF9800" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_mentors"
        android:layout_width="120dp"
        android:layout_height="60sp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@color/purple_700"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/ly_groups"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/mentorlar" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_vertical"
            android:gravity="center"
            android:text="Mentorlar"
            android:textColor="#FF9800" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>